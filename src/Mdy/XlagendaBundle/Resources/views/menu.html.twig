{# src/Mdy/XlagendaBundle/Resources/views/menu.html.twig #}

{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
{# menu des événements #}
<div class="dropdown">
<button class="btn btn-default dropdown-toggle" type="button" id="dpmActualites" data-toggle="dropdown" aria-expanded="true">
	<span class="glyphicon glyphicon-calendar"></span> Evénements
	<span class="caret"></span>
</button>
<ul class="dropdown-menu" role="menu" aria-labelledby="dpmActualites">
	<li><a href="{{ path("mdy_xlagenda_event_add") }}"><span class="glyphicon glyphicon-plus"></span> Ajouter</a></li>
	<li><a href="{{ path("mdy_xlagenda_event_list") }}"><span class="glyphicon glyphicon-list-alt"></span> Lister</a></li>
	<li><a href=""><span class="glyphicon glyphicon-search"></span> Rechercher</a></li>
	<li><a href=""><span class="glyphicon glyphicon-print"></span> Imprimer</a></li>
</ul>
</div>
{# menu des lieux #}
<div class="dropdown">
<button class="btn btn-default dropdown-toggle" type="button" id="dpmLieux" data-toggle="dropdown" aria-expanded="true">
	<span class="glyphicon glyphicon-globe"></span> Lieux
	<span class="caret"></span>
</button>
<ul class="dropdown-menu" role="menu" aria-labelledby="dpmLieux">
		<li><a href="{{ path('mdy_xlagenda_lieu_list') }}"><span class="glyphicon glyphicon-list-alt"></span> Lister</a></li>
		<li><a href="{{ path('mdy_xlagenda_lieu_add') }}"><span class="glyphicon glyphicon-plus"></span> Ajouter</a></li>
</ul>
</div>
{# menu des équipes #}
<div class="dropdown">
<button class="btn btn-default dropdown-toggle" type="button" id="dpmRubriques" data-toggle="dropdown" aria-expanded="true">
	<span class="glyphicon glyphicon-user"></span> Rubriques
	<span class="caret"></span>
</button>
<ul class="dropdown-menu" role="menu" aria-labelledby="dpmRubriques">
		<li><a href="{{ path("mdy_xlagenda_rubrique_list") }}"><span class="glyphicon glyphicon-list-alt"></span> Lister</a></li>
		<li><a href="{{ path("mdy_xlagenda_rubrique_add") }}"><span class="glyphicon glyphicon-plus"></span> Ajouter</a></li>
</ul>
</div>


{# menu des autres actions #}
<div class="dropdown">
<button class="btn btn-default dropdown-toggle" type="button" id="dpmActions" data-toggle="dropdown" aria-expanded="true">
	Autres actions
	<span class="caret"></span>
</button>
<ul class="dropdown-menu" role="menu" aria-labelledby="dpmActions">
	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	<li><a href="{{ path("fos_user_profile_show") }}"><span class="glyphicon glyphicon-user"></span> Mon profil</a></li>
	<li><a href="{{ path("mdy_core_index") }}"><span class="glyphicon glyphicon-home"></span> Retour en page d'accueil</a></li>
	<li><a href="{{ path("fos_user_security_logout") }}"><span class="glyphicon glyphicon-log-out"></span> Se déconnecter</a></li>
	{% else %}
	<li><a href="{{ path("fos_user_security_login") }}"><span class="glyphicon glyphicon-log-in"></span> Se connecter</a></li>
	{% endif %}
</ul>
</div>
{% endif %}



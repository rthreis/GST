{# src/OC/CoreBundle/Resources/views/Advert/menu.html.twig #}

<ul class="nav nav-pills nav-stacked">
	{% for advert in listAdverts %}
		{% if loop.index <= limit %}
			<li>
				<a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
					{{ advert.title }}
				</a>
			</li>
		{% endif %}
	{% endfor %}
</ul>